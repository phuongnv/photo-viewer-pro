{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Streamlit App",
            "type": "python",
            "request": "launch",
            "program": "-m",
            "args": [
                "streamlit",
                "run",
                "src/app.py",
                "--server.port",
                "8501",
                "--server.address",
                "localhost",
                "--browser.serverAddress",
                "localhost"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Streamlit with Hot Reload",
            "type": "python",
            "request": "launch",
            "program": "-m",
            "args": [
                "streamlit",
                "run",
                "src/app.py",
                "--server.port",
                "8501",
                "--server.address",
                "localhost"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}